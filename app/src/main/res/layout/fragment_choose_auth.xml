<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".user.ui.ChooseAuthFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/chs_gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/chs_gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/chs_gl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chs_btn_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_500"
        android:text="@string/login"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/chs_gl_1"
        app:layout_constraintLeft_toRightOf="@id/chs_gl_2"
        app:layout_constraintRight_toLeftOf="@id/chs_gl_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chs_btn_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:text="@string/sign_up"
        android:textColor="@color/blue_500"
        app:layout_constraintLeft_toRightOf="@id/chs_gl_2"
        app:layout_constraintRight_toLeftOf="@id/chs_gl_3"
        app:layout_constraintTop_toBottomOf="@id/chs_btn_1" />


</androidx.constraintlayout.widget.ConstraintLayout>
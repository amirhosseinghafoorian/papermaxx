<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ui.ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_gl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/username"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/profile_gl_1"
        app:layout_constraintRight_toLeftOf="@id/profile_gl_2"
        app:layout_constraintTop_toBottomOf="@id/profile_gl_3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/full_name"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/profile_gl_1"
        app:layout_constraintRight_toLeftOf="@id/profile_gl_2"
        app:layout_constraintTop_toBottomOf="@id/profile_username" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/subject"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/profile_gl_1"
        app:layout_constraintRight_toLeftOf="@id/profile_gl_2"
        app:layout_constraintTop_toBottomOf="@id/profile_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:gravity="center"
        android:text="@string/grade"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/profile_gl_1"
        app:layout_constraintRight_toLeftOf="@id/profile_gl_2"
        app:layout_constraintTop_toBottomOf="@id/subject" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_update_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF5722"
        android:text="@string/update_profile"
        app:layout_constraintLeft_toRightOf="@id/profile_gl_1"
        app:layout_constraintRight_toLeftOf="@id/profile_gl_2"
        app:layout_constraintTop_toBottomOf="@id/grade" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_change_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue_700"
        android:text="@string/change_password"
        app:layout_constraintLeft_toRightOf="@id/profile_gl_1"
        app:layout_constraintRight_toLeftOf="@id/profile_gl_2"
        app:layout_constraintTop_toBottomOf="@id/btn_update_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>
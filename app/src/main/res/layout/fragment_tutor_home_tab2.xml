<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.ui.TutorHomeFragmentTab2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ready_tutor_gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ready_tutor_gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ready_tutor_gl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ready_tutor_status_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/status"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ready_tutor_gl_3"
        app:layout_constraintLeft_toRightOf="@id/ready_tutor_gl_1"
        app:layout_constraintRight_toLeftOf="@id/ready_tutor_gl_2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ready_tutor_status_result_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="@color/blue_700"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/ready_tutor_status_tv"
        app:layout_constraintLeft_toRightOf="@id/ready_tutor_gl_1"
        app:layout_constraintRight_toLeftOf="@id/ready_tutor_gl_2" />

    <com.google.android.material.button.MaterialButton
        android:backgroundTint="@color/purple_700"
        android:id="@+id/btn_ready_tutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/ready"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/ready_tutor_status_result_tv"
        app:layout_constraintLeft_toRightOf="@id/ready_tutor_gl_1"
        app:layout_constraintRight_toLeftOf="@id/ready_tutor_gl_2" />

</androidx.constraintlayout.widget.ConstraintLayout>